@inherits FluxorComponent

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-10" >

<MudText Typo="Typo.h3">Counter Example</MudText>

@if (IsInitialized)
{
    <MudText Typo="Typo.body1">Current Value: @State.Counter</MudText>
    <MudNumericField @bind-Value="ChangeValue" Label="Change by" Min="1" Max="99" HelperText="Define the value by which to change the value"></MudNumericField>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" OnClick="DoIncrementCounter">increment</MudButton>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" OnClick="DoDecrementCounter">Decrement</MudButton>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" OnClick="DoResetCounter">Reset</MudButton>
}
</MudContainer>
